<% if (user) { %>
  <form method="post" action="/post" class="well form-inline center">
    <input type="text" class="col-md-4" name="post" />
    <button type="submit" class="btn btn-success">Say！</button>
  </form>
<% } %>
<!--%- partial('posts') %-->
<% posts.forEach(function(post, index) {
  if (index % 3 == 0) { %>
    <div class="row">
  <% } %>
  <div class="col-md-4">
  <h2><a href="/u/<%= post.user %>"><%= post.user %></a> says</h2>
  <p><small><%= post.time %></small></p>
  <p><%= post.post %></p>
  </div>
  <% if (index % 3 == 2) { %>
    </div>
  <% } %>
<% }) %>
<% if (posts.length % 3 != 0) { %>
  </div>
<% } %>